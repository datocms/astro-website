{
  "name": "astro-starter-kit",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npx simple-git-hooks && npm run generate-schema",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check --minimumSeverity=warning && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate-schema": "dotenv -c -- bash -c 'gql.tada generate schema https://graphql.datocms.com --header \"X-Exclude-Invalid: true\" --header \"Authorization: $DATOCMS_API_TOKEN\"'",
    "lint": "prettier --check .",
    "format": "npx prettier . --write",
    "heroku-postbuild": "npm run build && npm run fastly:purge_all",
    "fastly:purge_all": "dotenv -c -- bash -c 'curl -i -X POST \"https://api.fastly.com/service/$FASTLY_SERVICE_ID/purge_all\" -H \"Fastly-Key: $FASTLY_KEY\" -H \"Accept: application/json\"'"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.7.0",
    "@astrojs/check": "^0.9.3",
    "@astrojs/node": "^8.3.3",
    "@astrojs/react": "^3.6.2",
    "@datocms/astro": "^0.3.4",
    "@datocms/cda-client": "^0.2.2",
    "@datocms/cma-client": "^3.3.5",
    "@expressive-code/plugin-line-numbers": "^0.36.1",
    "@flex-development/unist-util-types": "^1.6.1",
    "@lion/ui": "^0.7.7",
    "@mailerlite/mailerlite-nodejs": "^1.3.0",
    "@mux/mux-player": "^2.9.1",
    "@rehooks/component-size": "^1.0.3",
    "@uidotdev/usehooks": "^2.4.1",
    "@wordpress/shortcode": "^4.7.0",
    "astro": "^4.15.7",
    "astro-expressive-code": "^0.36.1",
    "astro-vtbot": "^1.9.4",
    "classnames": "^2.5.1",
    "date-fns": "^3.6.0",
    "datocms-react-ui": "^1.1.1",
    "datocms-structured-text-generic-html-renderer": "^4.0.1",
    "datocms-structured-text-to-plain-text": "^4.0.1",
    "datocms-structured-text-utils": "^4.0.1",
    "embla-carousel": "^8.2.0",
    "gql.tada": "^1.8.5",
    "hast-util-select": "^6.0.2",
    "hast-util-to-string": "^3.0.0",
    "html-parsed-element": "^0.4.1",
    "http-status-ts": "^2.0.1",
    "jsdom": "^24.1.1",
    "ky": "^1.7.2",
    "lodash-es": "^4.17.21",
    "lru-cache": "^11.0.1",
    "mdast-util-to-string": "^4.0.0",
    "nanoid": "^5.0.7",
    "next-mdx-remote": "^5.0.0",
    "node-html-parser": "^6.1.13",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-datocms": "^7.0.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-hot-toast": "^2.4.1",
    "react-recaptcha-hook": "^1.2.3",
    "rehype-pretty-code": "^0.14.0",
    "remark-directive": "^3.0.0",
    "remove-markdown": "^0.5.5",
    "serialize-error": "^11.0.3",
    "striptags": "^3.2.0",
    "svgo": "^3.3.2",
    "typedoc": "^0.26.7",
    "typescript": "^5.5.4",
    "unist-util-visit": "^5.0.0",
    "vite-plugin-bundlesize": "^0.1.0"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.2",
    "@types/jsdom": "^21.1.7",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/wordpress__shortcode": "^2.3.6",
    "dotenv-cli": "^7.4.2",
    "postcss-inline-svg": "^6.0.0",
    "postcss-nested": "4.2.3",
    "prettier-plugin-astro": "^0.14.1",
    "rfs": "^10.0.0",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format"
  },
  "engines": {
    "node": "20"
  }
}
