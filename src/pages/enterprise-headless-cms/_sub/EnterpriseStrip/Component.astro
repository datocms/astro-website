---
import { Wrapper } from '~/components/Wrapper';
import s from './style.module.css';
---

<div class={s.root}>
  <Wrapper>
    <div class={s.rootInner}>
      <div class={s.intro}>
        {
          Astro.slots.has('kicker') && (
            <h2 class={s.kicker}>
              <slot name="kicker" />
            </h2>
          )
        }

        {
          Astro.slots.has('title') && (
            <h3 class={s.introTitle}>
              <slot name="title" />
            </h3>
          )
        }

        {
          Astro.slots.has('description') && (
            <article class={s.introDescription}>
              <slot name="description" />
            </article>
          )
        }
      </div>

      <div class={s.pointsWrapper}>
        {Astro.slots.has('default') && <slot />}
      </div>
    </div>
  </Wrapper>
</div>
