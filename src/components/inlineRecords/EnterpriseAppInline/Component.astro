---
import { EnterpriseAppInlineFragment } from './graphql';
import { readFragment, type FragmentOf } from 'gql.tada';
import { buildUrlForEnterpriseApp } from '~/lib/datocms/gqlUrlBuilder/enterpriseApp';

interface Props {
  record: FragmentOf<typeof EnterpriseAppInlineFragment>;
}

const { record } = Astro.props;

const unmaskedRecord = readFragment(EnterpriseAppInlineFragment, record);
---

<a href={buildUrlForEnterpriseApp(unmaskedRecord)} data-datocms-content-link-group>
  {unmaskedRecord.title}
</a>
