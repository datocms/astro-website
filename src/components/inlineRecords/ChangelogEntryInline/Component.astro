---
import { ChangelogEntryInlineFragment } from './graphql';
import { readFragment, type FragmentOf } from 'gql.tada';
import { buildUrlForChangelogEntry } from '~/lib/datocms/gqlUrlBuilder/changelogEntry';

interface Props {
  record: FragmentOf<typeof ChangelogEntryInlineFragment>;
}

const { record } = Astro.props;

const unmaskedRecord = readFragment(ChangelogEntryInlineFragment, record);
---

<a href={buildUrlForChangelogEntry(unmaskedRecord)} data-datocms-content-link-boundary>
  {unmaskedRecord.title}
</a>
