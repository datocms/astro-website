---
import { AcademyCourseInlineFragment } from './graphql';
import { readFragment, type FragmentOf } from 'gql.tada';
import { buildUrlForAcademyCourse } from '~/lib/datocms/gqlUrlBuilder/academyCourse';

interface Props {
  record: FragmentOf<typeof AcademyCourseInlineFragment>;
}

const { record } = Astro.props;

const unmaskedRecord = readFragment(AcademyCourseInlineFragment, record);
---

<a href={buildUrlForAcademyCourse(unmaskedRecord)}>
  {unmaskedRecord.name}
</a>
