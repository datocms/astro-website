---
import { ActiveLink } from '~/components/ActiveLink';
import s from './style.module.css';
import type { Entry } from './types';

type Props = Entry;

const entry = Astro.props;
---

<ActiveLink class={s.entry} activeClass={s.activeEntry} href={entry.url} exact>
  {entry.label}
</ActiveLink>

{
  entry.entries && (
    <div class={s.subEntries}>
      {entry.entries.map((subEntry) => (
        <ActiveLink href={subEntry.url} class={s.entry} activeClass={s.activeEntry} exact>
          {subEntry.label}
        </ActiveLink>
      ))}
    </div>
  )
}
