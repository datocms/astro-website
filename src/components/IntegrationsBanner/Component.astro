---
import { Wrapper } from '~/components/Wrapper';
import s from './style.module.css';

interface Props {
  bubbles: string[];
  title: string;
}

const { title, bubbles } = Astro.props;
---

<div class={s.root}>
  <div class={s.background}>
    <div class={s.backgroundInner}>
      {
        bubbles.map((bubble) => (
          <div class={s.backgroundImage}>
            <img src={bubble} class={s.backgroundImageInner} />
          </div>
        ))
      }
    </div>
  </div>
  <Wrapper>
    <div class={s.foreground}>
      <div class={s.body}>
        <div class={s.title}>{title}</div>
        <div class={s.content}><slot /></div>
      </div>
    </div>
  </Wrapper>
</div>
