---
import { Svg } from '~/components/Svg';
import s from './style.module.css';

interface Props {
  size?: 'small' | 'large';
  asLink?: boolean;
  illustration?: string | true;
  title: string;
  ctaLink?: string;
  ctaLabel?: string;
  color: 'pink' | 'azure' | 'gray' | 'blue' | 'green' | 'yellow';
}

const {
  size = 'large',
  asLink,
  illustration,
  title,
  ctaLink,
  ctaLabel = 'Check it out â†’',
  color,
} = Astro.props;

const resolvedIllustration =
  illustration === true ? 'svg/illustrations/developers-2' : illustration;
---

<div class={s.calloutWrapper} data-bkg={color} data-as-link={ctaLink && !!asLink} data-size={size}>
  {
    !!resolvedIllustration && (
      <div class={s.calloutImage}>
        <Svg name={resolvedIllustration} />
      </div>
    )
  }
  <div class={s.calloutBody}>
    <h3 class={s.bodyTitle}>{title}</h3>
    <div class={s.bodyDescription}>
      <slot name="text" />
    </div>
    {
      ctaLink && (
        <a href={ctaLink} class={s.ctaLink}>
          {ctaLabel}
        </a>
      )
    }
  </div>
</div>
