---
import { Wrapper } from '~/components/Wrapper';
import { Svg } from '~/components/Svg';

type Props = {
  logoUrl: string;
  image: string;
};

const { logoUrl, image } = Astro.props;

import s from './style.module.css';
---

<div class={s.root} data-component="UseCaseHead">
  <div class:list={[s.box, s.boxText]}>
    <div class={s.boxInner}>
      <Wrapper>
        <div class={s.inner}>
          <div class={s.kicker}>
            <img src={logoUrl} />
            <span class={s.plus}>+</span>
            <Svg name="svg/logos/datocms" />
          </div>
          <div class={s.title}>
            <slot />
          </div>
          <a class={s.cta} href="#usecase">
            Read the success case <Svg name="icons/regular/arrow-right" />
          </a>
        </div>
      </Wrapper>
    </div>
  </div>
  <div class:list={[s.box, s.boxCut]}>
    <div class={s.boxInner}>
      <Wrapper>
        <div class={s.inner}>
          <div class={s.kicker}>
            <img src={logoUrl} />
            <span class={s.plus}>+</span>
            <Svg name="svg/logos/datocms" />
          </div>
          <div class={s.title}>
            <slot />
          </div>
          <a class={s.cta} href="#usecase">
            Read the success case <Svg name="icons/regular/arrow-right" />
          </a>
        </div>
      </Wrapper>
    </div>
  </div>
  <div class:list={[s.box, s.boxImage]}>
    <div
      class={s.image}
      style={{ backgroundImage: `url(${image}&fit=min&q=90&crop=center&auto=format})` }}
    >
    </div>
  </div>
</div>
