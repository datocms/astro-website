---
import { Wrapper } from '~/components/Wrapper';

import s from './style.module.css';
---

<Wrapper>
  <div class={s.root} data-component="UseCaseRecap">
    <div class={s.kicker}>The challenge</div>
    {
      Astro.slots.has('challenge') && (
        <div class={s.text}>
          <slot name="challenge" />
        </div>
      )
    }
    <div class={s.kicker}>The result</div>
    {
      Astro.slots.has('result') && (
        <div class={s.text}>
          <slot name="result" />
        </div>
      )
    }
    <slot />
  </div>
</Wrapper>
