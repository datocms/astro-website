---
import { Svg } from '~/components/Svg';
import { Wrapper } from '~/components/Wrapper';
import s from './style.module.css';

type Props = {
  title?: string;
  clients: string[] | Array<{ imageUrl: string; href?: string }>;
};

const { title, clients } = Astro.props;
---

<Wrapper>
  {title && <div class={s.title}>{title}</div>}
  <div class={s.root}>
    {
      clients.map((client) => (
        <div class={s.logo}>
          {typeof client === 'string' ? (
            <Svg name={client} />
          ) : (
            <img loading="lazy" src={client.imageUrl} />
          )}
        </div>
      ))
    }
  </div>
</Wrapper>
